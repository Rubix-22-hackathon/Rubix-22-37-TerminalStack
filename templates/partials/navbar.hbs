    <div id="id02" class="modal">

      <form class="modal-content animate" id="register" >
        
        <p id="message"></p>
        <div class="container">
          <label for="name"><b>Name</b></label>
          <input class="details" name="name" placeholder="Enter your name" type="text" id="name" required>


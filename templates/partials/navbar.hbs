          <input class="details" type="password" id="password" placeholder="Enter Password" name="password" required>

          <label for="password"><b>Confirm Password</b></label>
          <input class="details" type="password" id="password" placeholder="Enter Password" name="password" required>

          <label><input type = "checkbox" onchange = "check(this)"><b>Are You A Doctor?</b></label><br><br>

          <label for="qualification" class="drdetails"><b>Qualification</b></label>
          <input class="details drdetails" name="qualification"  placeholder="Degree? MBBS/MD..etc" type="text"  required>
          
          <label for="experience" class="drdetails" ><b>Experience</b></label>
          <input name="experience" class="details drdetails" type="text" placeholder="Years of Experience"   required>

          <label for="address" class="drdetails" ><b>address</b></label>
          <input name="address" class="details drdetails" type="text" placeholder="Visit Address"   required>

          <label for="formFile" class="drdetails" ><b>Cerificate of Highest degree</b></label>
          <input name="file" class="details drdetails" type="file" id="formFile" required>

          <button type="submit">Register</button>
          
            <a href="#" class="reglog" onclick="log()" style="width:auto;">Login</a>

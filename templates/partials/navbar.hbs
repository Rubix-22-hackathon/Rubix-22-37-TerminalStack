    <div id="id01" class="modal">

      <form class="modal-content animate" action="/login" method="post">

        <div class="container">
          <label for="email"><b>Email</b></label>
          <input class="details" type="email" id="email" placeholder="example@gmail.com" name="email" required>
          <label for="password"><b>Password</b></label>
          <input class="details" type="password" id="password" placeholder="Enter Password" name="password" required>

          <button type="submit">Login</button>
          
          <a href="#" class="reglog" onclick="reg()" style="width:auto;">Register</a>
          
